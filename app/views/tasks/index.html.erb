<h1 class="text-center">List of my tasks</h1>

<%= link_to "New task", new_task_path %>

<% @tasks.each do |task| %>
    <h4><%= link_to task.title %></h4>
    <p> <%= task.details %> </p>
    <p> <%= task.completed %> </p>
    <%= link_to "Show task", task_path(task) %>
    <%= link_to "Edit task", edit_task_path(task) %>
    <%= link_to "Delete task", task_path(task), method: :delete %>
<% end %>


